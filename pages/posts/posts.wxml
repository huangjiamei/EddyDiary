<!--pages/posts/posts.wxml-->
<view class='title'>
  <image class="calender" src='../../images/icon/wx_app_calender5.png'></image>
  <text class='title_text'>Eddy 日记</text>
</view>
<view class='page_row' bindtap="suo">
  <view class='search_container' bind:tap='onTap'>
    <view class="search">
      <view class="add_search">
        
        <navigator url='../../pages/adddiary/adddiary'>
        <image class="new_add" src='../../images/icon/wx_app_add1.png'>
        </image>
        </navigator>

        <view class="df search_arr">
          <icon class="searchcion" size='20' type='search'></icon>
          <image class="close" src='../../images/icon/wx_app_close.png'></image>
          <input class="" disabled placeholder="Search" value="{{searchValue}}" />
        </view>
      </view>
    </view>
  </view>
</view>

<view class="table">
  <view class="tr bg-w">
    <view class="th">日期</view>
    <view class="th">心情</view>
    <view class="th ">内容</view>
    <view class="th ">类别</view>
  </view>

  <block wx:for="{{listData}}" >
    <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
      <view class="td">{{item.date}}</view>
      <view class="td">{{item.mood}}</view>
      <view class="td">{{item.content}}</view>
      <view class="td">{{item.tag}}</view>
    </view>
    <view class="tr" wx:else>
      <view class="td">{{item.date}}</view>
      <view class="td">{{item.mood}}</view>
      <view class="td">{{item.content}}</view>
      <view class="td">{{item.tag}}</view>
    </view>
  </block>

  </view>

<view class='moto-container' >
  <image class='agency' src='../../images/icon/wx_app_agency.png'></image>
  <image class='stranger' src='../../images/icon/wx_app_manyp.png'></image>
  <image class='my' src='../../images/icon/wx_app_my.png' catchtap='onPostTap'></image>
</view>